<h1> Burgers!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgerData}}
          {{#unless this.devoured}}
            <div>
              <form action="/update/{{id}}" method="POST">
                <button type="submit" class='burgerAvailable'> {{burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgerData}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                 <span>             <span> {{burger_name}} was eaten
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Cook A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/create" method="POST">
      <input type="text" id="name" name="burger_name">
      <button type="submit" class="addBurgerButton">Cook The Burger</button>
    </form>
  </div>
</div>