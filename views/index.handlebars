<center><h1> Burgers!</h1></center>

<main>
  <div class="container">
   <div class="jumbotron" id="jumbo">
    <div class="row">
      <div class="col s6">
        {{#each burgerData}}
          {{#unless this.devoured}}
            <div>
              <form action="/update/{{id}}" method="POST">
                <button type="submit" class='burgerAvailable'> {{burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgerData}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                 <span>             <span> {{burger_name}} was eaten
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
    </div>
  </div>
</main>

<center><h2>Cook A Burger </h2><center>

<div class="row">
  <div class="col s12">
   <center> <form action="/create" method="POST">
      <input type="text" id="name" name="burger_name">
      <button type="submit" class="addBurgerButton">Cook The Burger</button>
    </form></center>
  </div>
</div>